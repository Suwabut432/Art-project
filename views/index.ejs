      <div class="flex items-center justify-center sm:justify-start gap-4 bg-black h-10 w-10 rounded-full mt-2 sm:mt-0 mx-auto sm:mx-0">
        <!-- User Icon -->
      </div>

      <!-- Navigation -->
      <div class="flex flex-col sm:flex-row sm:gap-4 px-2 py-2 sm:py-3 items-center">
        <a href="/" class="w-full sm:w-auto mb-2 sm:mb-0">
          <button class="text-base sm:text-lg font-medium w-full sm:w-24 text-center px-3 py-1 rounded-md border border-gray-300 hover:bg-gray-800 hover:text-gray-100 hover:font-bold transition">
